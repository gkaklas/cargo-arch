pkgver() {
    (git describe --long --tags || echo "$pkgver") | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    export CARGO_TARGET_DIR="${srcdir}/${pkgname}-${pkgver}"
    cargo build --release
}

package() {
    export CARGO_TARGET_DIR="${srcdir}/${pkgname}-${pkgver}"
    usrdir="$pkgdir/usr"
    mkdir -p $usrdir
    cargo install --path "../../.." --root "$usrdir"
    rm -f $usrdir/.crates.toml
}
